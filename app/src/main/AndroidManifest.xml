<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.edu.uteq.dapps.proyectofinal192">
    <!-- solicitamos el permiso de internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoFinal192"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.album.AlbumDetalleActivity" android:label="Lista de canciones"></activity>
        <activity
            android:name=".LoginActivity"
            android:label="MusicApp 192">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistroActivity"
            android:label="Registro MusicApp" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ProyectoFinal192.NoActionBar" />
    </application>

</manifest>